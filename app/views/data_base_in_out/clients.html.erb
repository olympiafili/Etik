<a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
<a href="<%= data_base_in_out_add_users_path %>" class="btn btn-default" id="">Update from CSV</a>
</br>
<h1><b><%= t 'user_diax.offers' %></b></h1>
    <%= form_tag data_base_in_out_clients_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag(t("user_diax.search"), :name => nil )%>
        <%= submit_tag(t("user_diax.all"), :name => "all" )%>
      </p>
    <% end %></br>
</br>
<div class="table-responsive">          
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Company</th>
        <th>Country</th>
        <th>City</th>
        <th>Postal Code</th>
        <th>Phone</th>
        <th>Mobile</th>
        <th>Fax</th>
        <th>Update</th>
      </tr>
    </thead>
    <tbody>
      <% if (!@clients.nil?) %>
      <% @clients.each do |client| %>
      <tr>
        <td><%= client.id %></td>
        <td><%= client.eponimo %></td>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.address %></td>
        <td><%= client.company %></td>
        <td><%= client.country_code %></td>
        <td><%= client.city %></td>
        <td><%= client.postal_code %></td>
        <td><%= client.phone %></td>
        <td><%= client.mobile %></td>
        <td><%= client.fax %></td>
        <td><a href="" class="btn btn-default" id="">Update</a></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
  </div>