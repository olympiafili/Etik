<div class="container box_shadow">
  <div class="row">
    <div class="col-md-3 col-xs-12" id="leftCol">
    </div>
    <div class="col-md-6 col-xs-12">
        <h2>Edit <%= resource_name.to_s.humanize %></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,  class: "epikoinonia_form"}) do |f| %>
          <%= devise_error_messages! %>

          <div><%= t("translate.name") %><br />
          <%= f.text_field :name, autofocus: true, :required => true, class: "form-control" %></div>

          <div><%= t("translate.Epitheto") %><br />
          <%= f.text_field :epitheto, :required => true, class: "form-control" %></div>

          <div><%= t("translate.Address_1") %><br />
          <%= f.text_field :address1, :required => true, class: "form-control" %></div>

          <div><%= t("translate.Address_2") %><br />
          <%= f.text_field :address2, class: "form-control" %></div>

          <div><%= t("translate.label.Company") %><br />
          <%= f.text_field :company, :required => true, class: "form-control" %></div>

          <div><%= t("translate.label.Phone") %><br />
          <%= f.number_field :phone, :required => true, :minlength => 10, class: "form-control" %></div>

          <div><%= t("translate.Region") %><br />
               <%= f.select(:region) do %>
               <% [['Germany', 'Germany'], ['Greece', 2]].each do |c| -%>
               <%= content_tag(:option, c.first, value: c.last) %>
               <% end %>
               <% end %></div>

          <div><%= t("translate.Email") %><br />
          <%= f.email_field :email, class: "form-control" %></div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div><%= t("translate.Password") %><i>(<%= t("translate.leave_blank_if_you_don't_want_to_change_it") %>)</i><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>

          <div><%= t("translate.Password_confirmation") %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>

          <div><%= t("translate.Current_password") %><i>(<%= t("translate.we_need_your_current_password_to_confirm_your_changes") %>)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %></div>

          <div><%= f.submit "Update" , class: "btn btn-warning"%></div>
        <% end %>

        <h3><%= t("translate.Cancel_my_account") %></h3>

        <p><%= t("translate.Unhappy") %>? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

        <%= link_to "Back", :back %>

        </div>
  </div>
</div>
