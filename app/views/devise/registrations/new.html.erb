<div class="container box_shadow">
  <div class="row">
    <div class="col-md-3" id="leftCol">
    </div>
    <div class="col-md-6">

        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "epikoinonia_form", id: "contact-form"}) do |f| %>
          <%= devise_error_messages! %>
          
          <div class="form-group">
            <div><%= f.label :Name %> *<br />
            <%= f.text_field :name, autofocus: true, :required => true, class: "form-control" %></div>
          </div>

          <div class="form-group">
            <div><%= f.label :Surname %> *<br />
            <%= f.text_field :epitheto, :required => true, class: "form-control" %></div>
          </div>

          <div class="form-group">
            <div><%= f.label :Address_1 %> *<br />
            <%= f.text_field :address1, :required => true, class: "form-control" %></div>
          </div>

          <div class="form-group">
            <div><%= f.label :Address_2 %><br />
            <%= f.text_field :address2, class: "form-control" %></div>
          </div>

          <div class="form-group">
            <div><%= f.label :Company %> *<br />
            <%= f.text_field :company, :required => true, class: "form-control" %></div>
          </div>

          <div class="form-group">
            <div><%= f.label :Phone %> *<br />
            <%= f.number_field :phone, :required => true, class: "form-control" %></div>
          </div>

          <div class="form-group">
            <div><%= f.label :Region %><br />
               <%= f.select(:region) do %>
               <% [['Germany', 'Germany'], ['Greece', 2]].each do |c| -%>
               <%= content_tag(:option, c.first, value: c.last) %>
               <% end %>
               <% end %></div>
          </div>

          <div class="form-group">
            <div><%= f.label :email %> *<br />
            <%= f.email_field :email, :required => true, class: "form-control" %></div>
          </div>

          <div class="form-group">
            <div><%= f.label :password %> *<% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
            <%= f.password_field :password, autocomplete: "off", :required => true, class: "form-control" %></div>
          </div>

          <div class="form-group">
            <div><%= f.label :password_confirmation %> *<br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :required => true, class: "form-control" %></div>
          </div>
          
          <div class="form-group">
            <div><%= f.submit "Sign up" , class: "btn btn-success"%></div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

